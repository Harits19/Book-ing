<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/background2"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:text="Abdullah Harits"
        android:textSize="24sp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/textView3"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_below="@id/isiPesan_textView"
            android:layout_toLeftOf="@id/waktuPengiriman_textView"
            android:scaleType="centerInside"
            />

        <TextView
            android:id="@+id/waktuPengiriman_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/isiPesan_textView"
            android:layout_alignParentRight="true"
            android:padding="4dp"
            android:text="20.02"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

        <TextView
            android:background="@color/colorAccent"
            android:id="@+id/isiPesan_textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="#fff"
            android:layout_alignParentRight="true"
            android:text="Bukunya apakah ready gan ?"
            android:textSize="15dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/isiPesan_textView2"
            android:layout_toRightOf="@id/waktuPengiriman_textView2"
            android:scaleType="centerInside"
            />

        <TextView
            android:id="@+id/waktuPengiriman_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/isiPesan_textView2"
            android:layout_alignParentLeft="true"
            android:padding="4dp"
            android:text="20.02"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/isiPesan_textView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#fff"
            android:text="Bukunya apakah ready gan ?"
            android:textColor="#000"
            android:textSize="16dp" />


    </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">


        <EditText

            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:hint="Tulis Pesan..."
            android:padding="8dp"
            android:textSize="16sp" />


        <ImageButton
            style="@style/CustomButton1"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:src="@drawable/kirim"
            android:tint="#FFFFFF" />

    </FrameLayout>







</RelativeLayout>