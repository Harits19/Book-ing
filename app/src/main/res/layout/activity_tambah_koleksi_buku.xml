<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical">
    
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Tambah Koleksi Buku"
        android:textSize="24sp"
        android:textStyle="bold"
        />

    <ImageView
        android:background="#fff"
        android:src="@drawable/kamera"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:drawable="@drawable/kamera"
        android:layout_margin="24dp"
        />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/isbn"
            android:drawablePadding="12dp"
            android:layout_marginRight="24dp"
            android:hint="ISBN"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:hint="Judul Buku"
            android:drawableLeft="@drawable/nama_buku"
            android:drawablePadding="12dp"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:hint="Harga Jaminan"
            android:drawableLeft="@drawable/harga"
            android:drawablePadding="12dp"
            android:textSize="16sp" />


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:text="Pinjam Buku"
            android:textSize="16sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="24dp"
            android:text="Tukar Buku"
            android:textSize="16sp" />


    </LinearLayout>

    <Button
        style="@style/CustomButton1"
        android:layout_width="match_parent"
        android:text="Masuk"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        />

</RelativeLayout>