<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bukuLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/imageview_berita"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
             />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textview_judul_berita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textview_ringkasan_berita"
                    android:maxLines="2"
                    android:textSize="16sp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="Buku anatomi yang dibuat Nazi berdasarkan jenazah ratusan korban pembunuhan masih dipakai ahli bedah"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/textview_ringkasan_berita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:maxLines="2"
                    android:minLines="2"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:layout_marginTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="Buku anatomi yang dibuat Nazi berdasarkan jenazah ratusan korban pembunuhan masih dipakai ahli bedah"
                    android:textSize="12sp" />

                <Button
                    style="@style/CustomButton2"
                    android:layout_width="64dp"
                    android:layout_height="32dp"
                    android:layout_margin="10dp"
                    android:id="@+id/button_baca"
                    android:text="Baca"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="false"
                    android:textSize="12sp" />
            </RelativeLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>